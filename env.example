WEBHOOK_URL=your_webhook_url_here

# Performance Configuration
MAX_WORKERS=4
QUEUE_SIZE=1000
CACHE_TTL=300
RATE_LIMIT=1000

# Feature Flags
ENABLE_REAL_TIME_ANALYSIS=true
ENABLE_THREAT_INTELLIGENCE=true
ENABLE_ANOMALY_DETECTION=true
ENABLE_EXPLAINABILITY=true
