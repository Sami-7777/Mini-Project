# Database Configuration
MONGODB_URL=mongodb://localhost:27017/cyberattack_db
REDIS_URL=redis://localhost:6379
POSTGRES_URL=postgresql://user:password@localhost:5432/cyberattack_db

# API Keys for Threat Intelligence
VIRUSTOTAL_API_KEY=your_virustotal_api_key_here
GOOGLE_SAFE_BROWSING_API_KEY=your_google_safe_browsing_key_here
ABUSEIPDB_API_KEY=your_abuseipdb_api_key_here
SHODAN_API_KEY=your_shodan_api_key_here
MAXMIND_LICENSE_KEY=your_maxmind_license_key_here

# Model Configuration
